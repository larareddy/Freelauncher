<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="530dp"
    android:background="@drawable/lt_grey_panel_card"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <ImageView
            android:id="@+id/appointment_con"
            android:layout_width="wrap_content"
            android:layout_height="67dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="18dp"
            android:src="@drawable/ic_confirm" />

        <TextView
            android:id="@+id/appointment_con_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/appointment_con"
            android:layout_marginStart="50dp"
            android:layout_toEndOf="@+id/appointment_con"
            android:gravity="center|start"
            android:maxLines="1"
            android:text="Appointment confirmed"
            android:textColor="#00689d"
            android:textSize="54sp" />
    </RelativeLayout>

    <TextView
        android:id="@+id/appt_fixed"
        android:layout_width="610dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/appointment_con_text"
        android:layout_gravity="center"
        android:layout_marginTop="70dp"
        android:gravity="center"
        android:text="May 29 | 8:00am"
        android:textColor="#000000"
        android:textSize="60sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/address1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/appt_fixed"
        android:layout_centerInParent="true"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:gravity="center"
        android:text="Rairdon's Chrysler of Kirkland"
        android:textSize="42sp" />

    <TextView
        android:id="@+id/address2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/address1"
        android:layout_centerInParent="true"
        android:layout_gravity="center"
        android:layout_marginTop="0dp"
        android:gravity="center"
        android:text="12828 NE 124th St,Kirkland,WA"
        android:textSize="42sp" />

    <Button
        android:id="@+id/ok"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_below="@+id/address2"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="89dp"
        android:gravity="center"
        android:text="OK"
        android:textSize="42sp" />

</LinearLayout>