<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp130"
        android:layout_marginRight="@dimen/dp130"
        android:layout_marginTop="@dimen/dp29"
        app:cardCornerRadius="@dimen/dp2"
        app:cardElevation="@dimen/dp5"
        app:cardUseCompatPadding="true">

        <harman.com.freelauncher.customui.RobotoRegularButton
            android:id="@+id/map_button"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp80"
            android:background="#ffffff"
            android:gravity="center"
            android:onClick="navigationGo"
            android:text="Map"
            android:textAllCaps="false"
            android:textColor="#000000"
            android:textSize="@dimen/sp42" />
    </android.support.v7.widget.CardView>

</LinearLayout>