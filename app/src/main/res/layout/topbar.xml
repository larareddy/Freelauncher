<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp115"
    android:layout_centerHorizontal="true"
    android:background="@drawable/status_bar"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/harman_logo"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginRight="@dimen/dp15"
        android:layout_marginTop="@dimen/dp14"
        android:src="@drawable/connected_by_harman" />

    <ImageView
        android:id="@+id/network"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp51"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/dp74"
        android:layout_marginTop="@dimen/dp32"
        android:src="@drawable/ic_network_white" />

    <ImageView
        android:id="@+id/bluetooth"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp51"
        android:layout_marginRight="@dimen/dp21"
        android:layout_marginTop="@dimen/dp32"
        android:layout_toLeftOf="@+id/network"
        android:src="@drawable/ic_bluetooth_white" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/dp25"
        android:layout_centerVertical="true"
        android:layout_toStartOf="@+id/bluetooth"
        android:text="12:32"
        android:background="@color/colorPrimaryDark"
        android:textColor="@android:color/white"

        android:textSize="@dimen/dp62" />

</RelativeLayout>