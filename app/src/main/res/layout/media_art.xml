<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/aha_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="19dp"
        android:src="@drawable/aha_logo"/>
    <harman.com.freelauncher.customui.NSRegularTextView
        android:id="@+id/text22"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Today's Hits"
        android:textColor="#ffffff"
        android:textSize="54sp"
        android:gravity="center"
        android:layout_marginTop="49dp"/>
    <ImageView
        android:id="@+id/album1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text22"
        android:src="@drawable/default_album_art"
        android:layout_marginTop="16dp"/>
    <harman.com.freelauncher.customui.NSRegularTextView
        android:id="@+id/artist"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/album1"
        android:text="Something Only I Can See"
        android:textColor="#ffffff"
        android:textSize="54sp"
        android:gravity="center"
        android:layout_marginTop="20dp"/>
    <harman.com.freelauncher.customui.NSRegularTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="This American Life"
        android:layout_below="@+id/artist"
        android:textColor="#ffffff"
        android:textSize="34sp"
        android:gravity="center"
        android:layout_marginTop="12dp"/>


   <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp24"
        android:layout_marginRight="@dimen/dp24"
        android:layout_marginTop="605dp"
        android:background="@android:color/white"
        android:orientation="vertical">

        <ProgressBar
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="-6dp"
            android:progress="50"
            android:progressTint="#E08B19" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/music_card">


            <ImageView
                android:id="@+id/previous_icon"
                android:layout_width="54dp"
                android:layout_height="54dp"
                android:layout_alignParentStart="true"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_gravity="center_horizontal"
                android:layout_marginStart="@dimen/dp112"
                android:src="@drawable/ic_skip_previous" />

            <ImageView
                android:id="@+id/play_icon"
                android:layout_width="@dimen/dp101"
                android:layout_height="@dimen/dp101"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_play" />

            <ImageView
                android:id="@+id/next_icon"
                android:layout_width="54dp"
                android:layout_height="54dp"
                android:layout_alignParentEnd="true"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_gravity="center_horizontal"
                android:layout_marginEnd="@dimen/dp112"
                android:src="@drawable/ic_skip_next" />


        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>