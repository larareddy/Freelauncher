<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/appointment_con"
        android:layout_width="wrap_content"
        android:layout_marginTop="@dimen/dp10"
        android:layout_height="@dimen/dp67"
        android:layout_marginLeft="55dp"
        android:src="@drawable/ic_confirm" />


    <harman.com.freelauncher.customui.RobotoRegularTextView
        android:id="@+id/appointment_con_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:maxLines="1"
        android:text="@string/appointment_confirmed"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/sp54" />


    <LinearLayout
        android:id="@+id/address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/appointment_con_text"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <harman.com.freelauncher.customui.RobotoBoldTextView
            android:id="@+id/appt_fixed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp18"
            android:gravity="center"
            android:text="@string/appt2"
            android:textColor="@android:color/white"
            android:textSize="@dimen/sp54" />

        <harman.com.freelauncher.customui.RobotoRegularTextView
            android:id="@+id/address1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp28"
            android:gravity="center"
            android:text="Rairdon's Chrysler of Kirkland"
            android:textColor="@android:color/white"
            android:textSize="@dimen/sp34" />

        <harman.com.freelauncher.customui.RobotoRegularTextView
            android:id="@+id/address2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp2"
            android:gravity="center"
            android:text="@string/street"
            android:textColor="@android:color/white"
            android:textSize="@dimen/sp34" />

    </LinearLayout>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp80"
        android:layout_below="@id/address"
        android:layout_marginLeft="48dp"
        android:layout_marginRight="48dp"
        android:layout_marginTop="@dimen/dp45"
        app:cardElevation="@dimen/dp8">

        <harman.com.freelauncher.customui.RobotoRegularButton
            android:id="@+id/ok"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/maintenance_btn"
            android:onClick="appointmentConfirmed"
            android:text="@string/ok"
            android:backgroundTint="@color/colorWhite"
            android:textColor="@android:color/black"
            android:textSize="@dimen/sp42" />
    </android.support.v7.widget.CardView>
</RelativeLayout>